{
  "name": "mcp-minutes-gateway",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "MCP Server: deterministic DOCX minutes generator with HTTP download link",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
    "scripts": {
    "dev": "tsx src/index.ts",
    "dev:graph": "node --env-file=.env.graph --import tsx src/index.ts",
