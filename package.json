    "test:contract": "tsx scripts/contract_test_minutes_tool.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "docxtemplater": "^3.50.0",
    "pino": "^9.6.0",
    "pizzip": "^3.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
