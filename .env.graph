MCP_HTTP_PORT=3000
MCP_HTTP_HOST=127.0.0.1
# AppRouter / Reverse-Proxy allowlist (comma-separated). Required for non-local hosts.
# If you bind MCP_HTTP_HOST=0.0.0.0, set allowlists below.
# MCP_ALLOWED_HOSTS=approuter.example.com,approuter.example.com:443
# MCP_ALLOWED_ORIGINS=https://approuter.example.com
# Allow x-user-token only for local tests
# ALLOW_X_USER_TOKEN=false

DOCX_TEMPLATE_PATH=.\templates\minutes_template.docx
OUTPUT_FILENAME_PATTERN={date}__{title}__Minutes.docx

LOG_LEVEL=info
